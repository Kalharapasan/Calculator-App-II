<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_background"
    android:padding="16dp">

    <!-- Top Menu Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginBottom="8dp">

        <ImageButton
            android:id="@+id/btnHistory"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/menu_button_background"
            android:src="@drawable/ic_history"
            android:contentDescription="History"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/menu_button_background"
            android:src="@drawable/ic_settings"
            android:contentDescription="Settings" />
    </LinearLayout>

    <!-- Display Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:layout_marginBottom="16dp"
        android:elevation="8dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/display_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Memory & Mode Indicators -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvMemoryIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/calculator_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:background="@drawable/memory_indicator_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvModeIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEG"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Secondary Display -->
            <TextView
                android:id="@+id/tvSecondaryDisplay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:gravity="end|center_vertical"
                android:text=""
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:maxLines="1"
                android:ellipsize="start"
                android:alpha="0.7" />

            <!-- History Display -->
            <TextView
                android:id="@+id/tvHistory"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:text=""
                android:textColor="@color/text_secondary"
                android:textSize="18sp"
                android:fontFamily="monospace"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Main Display -->
            <TextView
                android:id="@+id/tvDisplay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="end|center_vertical"
                android:text="0"
                android:textColor="@color/text_primary"
                android:textSize="48sp"
                android:fontFamily="monospace"
                android:maxLines="1"
                android:ellipsize="start" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Button Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:columnCount="4"
        android:rowCount="8">

        <!-- Row 1: Memory Functions -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/button_memory">
            <Button
                android:id="@+id/btnMC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="MC"
                android:textColor="@color/text_memory"
                android:textSize="14sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/button_memory">
            <Button
                android:id="@+id/btnMR"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="MR"
                android:textColor="@color/text_memory"
                android:textSize="14sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/button_memory">
            <Button
                android:id="@+id/btnMPlus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="M+"
                android:textColor="@color/text_memory"
                android:textSize="14sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/button_memory">
            <Button
                android:id="@+id/btnMMinus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="M-"
                android:textColor="@color/text_memory"
                android:textSize="14sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- Row 2: MS, M~, %, CE -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/button_memory">
            <Button
                android:id="@+id/btnMS"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="MS"
                android:textColor="@color/text_memory"
                android:textSize="14sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/button_memory">
            <Button
                android:id="@+id/btnMTilde"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="M~"
                android:textColor="@color/text_memory"
                android:textSize="14sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/button_function">
            <Button
                android:id="@+id/btnPercent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="%"
                android:textColor="@color/text_function"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/button_function">
            <Button
                android:id="@+id/btnCE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="CE"
                android:textColor="@color/text_function"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- Row 3: Advanced Functions -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/button_function">
            <Button
                android:id="@+id/btnOneOverX"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="1/x"
                android:textColor="@color/text_function"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/button_function">
            <Button
                android:id="@+id/btnSquare"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="x²"
                android:textColor="@color/text_function"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/button_function">
            <Button
                android:id="@+id/btnSqrt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="√x"
                android:textColor="@color/text_function"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/button_clear">
            <Button
                android:id="@+id/btnC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="C"
                android:textColor="@color/text_clear"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- Rows 4-6: Number buttons 7-9, 4-6, 1-3 with operators -->
        <!-- Row 4 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/button_number">
            <Button android:id="@+id/btn7" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/transparent" android:text="7" android:textColor="@color/text_number" android:textSize="24sp" android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/button_number">
            <Button android:id="@+id/btn8" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/transparent" android:text="8" android:textColor="@color/text_number" android:textSize="24sp" android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/button_number">
            <Button android:id="@+id/btn9" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/transparent" android:text="9" android:textColor="@color/text_number" android:textSize="24sp" android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/button_operator">
            <Button android:id="@+id/btnDivide" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/transparent" android:text="÷" android:textColor="@color/text_operator" android:textSize="24sp" android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- Row 5 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/button_number">
            <Button android:id="@+id/btn4" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/transparent" android:text="4" android:textColor="@color/text_number" android:textSize="24sp" android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/button_number">
            <Button android:id="@+id/btn5" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/transparent" android:text="5" android:textColor="@color/text_number" android:textSize="24sp" android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/button_number">
            <Button android:id="@+id/btn6" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/transparent" android:text="6" android:textColor="@color/text_number" android:textSize="24sp" android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/button_operator">
            <Button android:id="@+id/btnMultiply" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/transparent" android:text="×" android:textColor="@color/text_operator" android:textSize="24sp" android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- Row 6 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/button_number">
            <Button android:id="@+id/btn1" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/transparent" android:text="1" android:textColor="@color/text_number" android:textSize="24sp" android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/button_number">
            <Button android:id="@+id/btn2" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/transparent" android:text="2" android:textColor="@color/text_number" android:textSize="24sp" android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/button_number">
            <Button android:id="@+id/btn3" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/transparent" android:text="3" android:textColor="@color/text_number" android:textSize="24sp" android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/button_operator">
            <Button android:id="@+id/btnMinus" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/transparent" android:text="−" android:textColor="@color/text_operator" android:textSize="24sp" android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- Row 7 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/button_function">
            <Button android:id="@+id/btnPlusMinus" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/transparent" android:text="±" android:textColor="@color/text_function" android:textSize="20sp" android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/button_number">
            <Button android:id="@+id/btn0" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/transparent" android:text="0" android:textColor="@color/text_number" android:textSize="24sp" android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/button_number">
            <Button android:id="@+id/btnDot" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/transparent" android:text="." android:textColor="@color/text_number" android:textSize="28sp" android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/button_operator">
            <Button android:id="@+id/btnPlus" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/transparent" android:text="+" android:textColor="@color/text_operator" android:textSize="24sp" android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- Row 8: Equals Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="4"
            android:layout_rowWeight="1"
            android:layout_columnSpan="4"
            android:layout_margin="3dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/button_equals">
            <Button
                android:id="@+id/btnEquals"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/equals_button_gradient"
                android:text="="
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </GridLayout>
</LinearLayout>